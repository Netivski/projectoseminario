<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="ISEL.Sample.Entity.Post, ISEL.Sample.Entity" table="Post" lazy="false">
		<id name="ID" column="Id">
			<generator class="identity" />
		</id>
		<property name="Name" column="Name" not-null="false" />
		<property name="Create" column="Create" not-null="false" />
	
		<bag name="_Comments" access="field" table="Comment" inverse="true">
			<key column="PostId" />
			<one-to-many class="ISEL.Sample.Entity.Comment, ISEL.Sample.Entity" />
		</bag>
	</class>
</hibernate-mapping>