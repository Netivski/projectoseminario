		<id name="ID" column="Id">
			<generator class="identity" />
		</id>
		<property name="CreditoMaximo" column="CreditoMaximo" not-null="true" />
		<property name="Nome" column="Nome" not-null="false" />
		<property name="DtNascimento" column="DtNascimento" not-null="false" />
		<property name="NIF" column="NIF" not-null="false" />
	
	</class>
</hibernate-mapping>