<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="FirstProject"
                   namespace="FirstProject">
	<class name="Faixa" table="Faixa" lazy="false">
		<id name="ID" column="Id">
			<generator class="identity" />
		</id>
		<property name="Nome" column="Nome" not-null="false" />
		<property name="Duracao" column="Duracao" not-null="false" />
		<property name="Genero" column="Genero" not-null="false" />
	
		<many-to-one name="LP" class="LP" column="LPId" cascade="all" />
		<many-to-one name="EP" class="EP" column="EPId" cascade="all" />
	</class>
</hibernate-mapping>